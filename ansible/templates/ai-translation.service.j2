[Unit]
Description=Simple AI Translation Service
After=network.target

[Service]
Type=simple
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory={{ app_dir }}/ai-service
Environment=MODEL_NAME={{ model_name }}
ExecStart={{ ai_venv_path }}/bin/gunicorn --bind {{ ai_bind_host }}:{{ ai_port }} --workers {{ ai_workers }} --timeout 300 app:app
Restart=on-failure
RestartSec=5
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ app_dir }}/ai-service

[Install]
WantedBy=multi-user.target
